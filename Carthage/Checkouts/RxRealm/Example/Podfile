source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

target 'RxRealm_Example' do
  platform :ios, '8.0'
  pod 'RxRealm', :path => '../'
  pod 'RxSwift',    '~> 3.2'
  pod 'RxCocoa',    '~> 3.2'
  pod 'RealmSwift', '~> 2.4'
end

target 'RxRealm_Tests' do
  platform :ios, '8.0'
  pod 'RxSwift',    '~> 3.2'
  pod 'RxCocoa',    '~> 3.2'
  pod 'RxTest',    '~> 3.2'
  pod 'RealmSwift', '~> 2.4'
  pod 'RxRealm', :path => '../'
end
